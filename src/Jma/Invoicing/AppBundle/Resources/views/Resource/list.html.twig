{% extends "InvoicingAppBundle::base.html.twig" %}

{% block content_content %}
    <table class="table table-bordered table-condensed table-striped table-responsive">
    </table>
{% endblock %}

{% block content_sidebar %}
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Actions</h3></div>
        <div class="panel-body">
            {{ block('panel_action') }}
        </div>
    </div>
    {% if formFilter is defined %}
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ common.btn({
                    href: filter_reinit|default(filter_action|default('')),
                    text: 'Réinitialiser',
                    size: 'xs',
                    color: 'danger',
                    cls: 'pull-right'
                }) }}
                <h3 class="panel-title">Filtres de recherche</h3>
            </div>
            <div class="panel-body">
                {{ block('panel_filters') }}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block panel_filters %}
    <form class="form form-horizontal" action="{{ filter_action|default('') }}" method="{{ filter_method|default('post') }}">

        {{ form_rest(formFilter) }}

        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Rechercher</button>
                {{ common.btn({
                    href: filter_reinit|default(filter_action|default('')),
                    text: 'Réinitialiser',
                }) }}
            </div>
        </div>
    </form>
{% endblock %}