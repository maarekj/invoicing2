{% extends "InvoicingAppBundle::base.html.twig" %}

{% set title = 'security.login.title'|trans %}

{% block page_header %}
{% endblock page_header %}

{% block content %}

    <div class="page-header col-md-offset-3 col-md-6">
        <h1>{{ title|default('') }}</h1>
    </div>

    <div class="col-md-6 col-md-offset-3 well well-lg">            
        {% if error %}
            <div>{{ error|trans }}</div>
        {% endif %}

        <form action="{{ path("invoicing_security_login_check") }}" method="post" role="form" class="form-horizontal">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label class="col-lg-4 control-label" for="username">{{ 'security.login.username'|trans }}</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-lg-4 control-label">{{ 'security.login.password'|trans }}</label>
                <div class="col-lg-8">
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-4 col-lg-8">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-4 col-lg-8">
                    <button class="btn btn-primary" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
