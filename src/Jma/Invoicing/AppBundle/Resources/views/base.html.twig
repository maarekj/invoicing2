{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

<!DOCTYPE html>

{% block html_tag %}
<html>
{% endblock html_tag %}

{% block head %}
    <head>
        <meta charset="UTF-8"/>

        {% block head_style %}
            <link href="{{ app.request.basePath }}/bundles/invoicingapp/bootstrap-3.1.1/css/bootstrap.min.css"
                  type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ app.request.basePath }}/bundles/jmabootstrap/select2/select2.css"
                  type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ app.request.basePath }}/bundles/invoicingapp/jquery-ui-1.10.3/themes/base/jquery-ui.css"
                  type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ app.request.basePath }}/bundles/invoicingapp/css/style.css"
                  type="text/css" rel="stylesheet" media="screen"/>
        {% endblock head_style %}

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block head_script %}
            <script type="text/javascript"
                    src="{{ app.request.basePath }}/bundles/invoicingapp/jquery/jquery-2.0.3.min.js"></script>
            <script type="text/javascript"
                    src="{{ app.request.basePath }}/bundles/invoicingapp/jquery-ui-1.10.3/ui/minified/jquery-ui.min.js"></script>
            <script type="text/javascript"
                    src="{{ app.request.basePath }}/bundles/invoicingapp/jquery-ui-1.10.3/ui/minified/i18n/jquery.ui.datepicker-fr.min.js"></script>
        {% endblock head_script %}

        <title>{% block title %}invoicing2 - {{ title|default('') }}{% endblock title %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
        {% block head_bottom %}
        {% endblock head_bottom %}
    </head>
{% endblock head %}

{% block body_tag %}
<body data-spy="scroll">
{% endblock body_tag %}

{% block body_start %}
{% endblock body_start %}

{% block body %}
{% block navbar %}
    {% embed '@MopaBootstrap/Navbar/navbar.html.twig' with { fixedTop: true, inverse: true } %}
{% block brand %}
    <a class="navbar-brand" href="#">Invoicing 2</a>
{% endblock %}

    {% block menu %}
        {{ mopa_bootstrap_menu('InvoicingAppBundle:MenuBuilder:mainMenu') }}
        {{ mopa_bootstrap_menu('InvoicingAppBundle:MenuBuilder:mainMenuRight') }}
    {% endblock %}
    {% endembed %}
{% endblock navbar %}

{% block container %}
{% block container_div_start %}<div class="{% block container_class %}container{% endblock container_class %}">{% endblock container_div_start %}
    {% block header %}
    {% endblock header %}

{% block content_div_start %}
    <div class="content">{% endblock content_div_start %}
    {% block page_header %}
        <div class="page-header">
            <h1>{% block headline %}{{ title|default('') }}{% endblock headline %}</h1>
        </div>
    {% endblock page_header %}

    {% block flashes %}
        {% if app.session.flashbag.peekAll|length > 0 %}
            <div class="row">
                <div class="col-sm-12">
                    {{ session_flash() }}
                </div>
            </div>
        {% endif %}
    {% endblock flashes %}

    {% block content_row %}
        <div class="row">
            {% block content %}
                <div class="{{ contentContentClass|default("col-sm-9") }}">
                    {% block content_content %}
                        <strong>Lorem ipsum dolor sit amet...</strong>
                    {% endblock content_content %}
                </div>
                <div class="{{ contentSidebarClass|default("col-sm-3") }}">
                    {% block content_sidebar %}
                        <h2>Sidebar</h2>
                    {% endblock content_sidebar %}
                </div>
            {% endblock content %}
        </div>
    {% endblock content_row %}
{% block content_div_end %}</div>{% endblock content_div_end %}
    <footer>
        {% block footer %}
            <p>&copy; Joseph Maarek</a> 2011-2014</p>
        {% endblock footer %}
    </footer>
{% block container_div_end %}</div><!-- /container -->{% endblock container_div_end %}
{% endblock container %}
{% block foot_script %}
    <script type="text/javascript"
            src="{{ app.request.basePath }}/bundles/jmabootstrap/select2/select2.min.js"></script>
    <script type="text/javascript"
            src="{{ app.request.basePath }}/bundles/mopabootstrap/js/mopabootstrap-collection.js"></script>
    <script type="text/javascript"
            src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular.js"></script>
    <script type="text/javascript" src="{{ app.request.basePath }}/js/angular/angular-locale_fr-fr.js"></script>
    <script type="text/javascript"
            src="{{ app.request.basePath }}/bundles/invoicingapp/js/preventDefault.js"></script>
{% endblock foot_script %}
{% endblock body %}
</body>
</html>
